@model TB_USUARIO
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"].</h2>

<link href="~/assets/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet">


<form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
    <h4>Create a new account.</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="cod_usu" class="col-md-10 control-label"></label>
        <div class="col-md-4">
            <input asp-for="cod_usu" class="form-control" />
            <span asp-validation-for="cod_usu" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="pass_usu" class="col-md-10 control-label"></label>
        <div class="col-md-4">
            <input asp-for="pass_usu" type="password" class="form-control" />
            <span asp-validation-for="pass_usu" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group">
        <label asp-for="nom_usu" class="col-md-10 control-label"></label>
        <div class="col-md-4">
            <input asp-for="nom_usu" class="form-control" />
            <span asp-validation-for="nom_usu" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="tip_usu" class="col-md-10 control-label"></label>
        <div class="col-md-4">
            <input asp-for="tip_usu" value="ADMIN" class="form-control" readonly />
            <span asp-validation-for="tip_usu" class="text-danger"></span>
        </div>
    </div>
  
    <div class="col-lg-4 col-md-4 col-sm-12">
        <div class="btn-group bootstrap-select form-control show-tick">
            <div class="dropdown-menu" role="combobox" style="max-height: 295px; overflow: hidden; min-height: 3px;">
                <ul class="dropdown-menu inner" role="listbox" aria-expanded="false" style="max-height: 295px; overflow-y: auto; min-height: 2px;">
                    <li data-original-index="0" class="selected">
                        <a tabindex="0" class="" data-tokens="null" role="option" aria-disabled="false" aria-selected="true"><span class="glyphicon glyphicon-ok check-mark"></span></a>
                    </li>
                    <li data-original-index="1"><a tabindex="0" class="" data-tokens="null" role="option" aria-disabled="false" aria-selected="false"><span class="text">BCA</span><span class="glyphicon glyphicon-ok check-mark"></span></a></li>
                    <li data-original-index="2"><a tabindex="0" class="" data-tokens="null" role="option" aria-disabled="false" aria-selected="false"><span class="text">MCA</span><span class="glyphicon glyphicon-ok check-mark"></span></a></li>
                    <li data-original-index="3"><a tabindex="0" class="" data-tokens="null" role="option" aria-disabled="false" aria-selected="false"><span class="text">BCom</span><span class="glyphicon glyphicon-ok check-mark"></span></a></li>
                    <li data-original-index="4"><a tabindex="0" class="" data-tokens="null" role="option" aria-disabled="false" aria-selected="false"><span class="text">MCom</span><span class="glyphicon glyphicon-ok check-mark"></span></a></li>
                </ul>
            </div>
            <label asp-for="empresa" class="col-md-10 control-label"></label>
            <select asp-for="empresa" title="-- EMPRESA --" class="form-control show-tick" tabindex="-98" required>
                <option value="CYBERGESTION">CYBERGESTION</option>
                <option value="OPPLUS">OPPLUS</option>
            </select>
        </div>
    </div>
    <br />

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-success" style="float:left;">REGISTRAR</button>
        </div>
    </div>

    <br />
    <br />
    <br />
</form>

